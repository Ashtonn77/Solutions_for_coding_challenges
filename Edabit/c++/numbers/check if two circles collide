one-->

#include <cmath>
bool isCircleCollision(std::vector<int> c1,std::vector<int> c2) {
	using namespace std;
	int x = pow((c1[1]-c2[1]),2)+pow((c1[2]-c2[2]),2);
	return x <= pow((c1[0]+c2[0]),2);
}

------------------------------------------------------------------

two-->

bool isCircleCollision(std::vector<int> c1,std::vector<int> c2) {
    return ((abs(c1[1] - c2[1]) + abs(c1[2] - c2[2])) <= c1[0]+c2[0]);
}

------------------------------------------------------------------
