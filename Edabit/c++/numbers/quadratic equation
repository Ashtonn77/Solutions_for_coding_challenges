one -->

#include <cmath>
int quadraticEquation(int a, int b, int c) {
int cnt{1};
int sum{-1};
int ax{}, bx{};
	while(true){
	ax = pow(cnt,2);
	ax *= a;
	bx = b * cnt;
	sum = ax + bx + c;
	if(sum == 0) return cnt;
	cnt++;
}
}

