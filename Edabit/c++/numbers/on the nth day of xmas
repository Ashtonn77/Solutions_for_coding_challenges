one -->

int xmasItems(int n) {
	int total{0};
    for(int i = 1; i <= n; i++){
    total += (i * (i + 1) / 2);
    }
	return total;
}

------------------------------

two -->

int xmasItems(int n) {
	if (n==1) {
	return 1;
	}
	else { 
	return n + xmasItems(n-1);
	}
}

